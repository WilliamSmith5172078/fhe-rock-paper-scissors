{
  "name": "fhe-rock-paper-scissors",
  "version": "1.0.0",
  "description": "Privacy-Preserving Rock Paper Scissors Game with FHEVM",
  "scripts": {
    "compile": "hardhat compile",
    "deploy:sepolia": "hardhat run scripts/deploy-sepolia.js --network sepolia",
    "deploy:sepolia-public": "hardhat run scripts/deploy-sepolia-public.js --network sepolia",
    "deploy:localhost": "hardhat run scripts/deploy.js --network localhost",
    "frontend:install": "cd frontend && npm install",
    "frontend:start": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "test": "hardhat test",
    "coverage": "hardhat coverage"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "chai": "^4.5.0",
    "dotenv": "^17.2.2",
    "hardhat": "^2.17.0",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2"
  },
  "keywords": [
    "fhe",
    "homomorphic-encryption",
    "blockchain",
    "zama",
    "react",
    "rock-paper-scissors",
    "privacy",
    "game",
    "web3",
    "ethereum"
  ],
  "author": "FHE Game Studio",
  "license": "MIT",
  "dependencies": {
    "@fhevm/sdk": "^0.7.0-20",
    "@fhevm/solidity": "^0.8.0",
    "@zama-fhe/relayer-sdk": "^0.2.0"
  }
}
